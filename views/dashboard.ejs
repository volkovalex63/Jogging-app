<!DOCTYPE html>

<html>
  <head>
    <%- include('common/head') %>
    <script src="/controllers/dashboard.js"></script>
  </head>
  <body class="fixed-nav sticky-footer bg-dark" id="page-top" >
    <%- include('common/nav-bar') %>
    <div class="content-wrapper">
      <div class="container-fluid">
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-table"></i><%= title %></div>
          <div class="card-body">
            <div class="table-responsive">
              <div id="addPart" style="padding-right: 40%;">
                <form class="form-inline">
                  <div class="form-group">
                    <label for="name" class="text-primary">name :</label>
                    <div id="selectName"></div>
                  </div>
                  <div class="form-group">
                    <label for="pwd" class="text-primary">date :</label>
                    <input class="form-control" type="date" id="addDate"></input>
                  </div>
                  <div class="form-group">
                    <label for="distance" class="text-primary">distance :</label>
                    <input class="form-control" type="text" id="addDistance"></input>
                  </div>
                  <div class="form-group">
                    <label for="time" class="text-primary">time :</label>
                    <input class="form-control" type="text" id="addTime"></input>
                  </div>
                  <hr />
                  <button class="btn btn-success" style="align: right;" id="save">Save</button>
                </form>
              </div>

              <div class="filter">
                <form>
                  <div style="float: left;padding-top: 10px;padding-bottom: 10px;" class="form-inline">
                    <label><b>From</b></label>
                    <input class="form-control" id="from" type="date"></input>
                    <label><b>To</b></label>
                    <input class="form-control" id="to" type="date"></input>
                    <!-- <div style="padding-left: 20%"><p style="padding-top: 5px;" class="text-success" id="resultmsg"></p></div> -->
                  </div>
                </form>
              </div>

              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr style="background-color: lightgray;">
                    <th>Name</th>
                    <th>Date</th>
                    <th>Distance(m)</th>
                    <th>time(minutes)</th>
                    <th>Average speed(m/s) </th>
                  </tr>
                </thead>
                <tfoot>
                  <tr style="background-color: lightgray;">
                    <th>Name</th>
                    <th>Date</th>
                    <th>Distance(km)</th>
                    <th>time(minutes)</th>
                    <th>Average speed(m/s) </th>
                  </tr>
                </tfoot>
                <tbody id="list">
                </tbody>
              </table>
            </div>
          </div>
          <div><p class="text-success text-center" id="resultMsg"></p></div>
          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
      </div>
      <%- include('common/modal') %>
    </div>
  </body>
</html>
