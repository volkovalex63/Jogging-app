<!DOCTYPE html>

<html>
  <head>
    <%- include('common/head') %>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/javascripts/encrypt-password.js"></script>
    <script src="/controllers/login.js"></script>
  </head>
  <body class="bg-dark">
    <div class="container" style="padding-top: 5%;">
      <div class="card card-login mx-auto mt-5">
        <div class="card-header">Login</div>
        <div class="card-body">
          <form id="form-datas">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input class="form-control" id="email" type="email" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input class="form-control" id="password" type="password" placeholder="Password">
            </div>
            <div class="text-danger" id="incorrectMsg"></div>
            <button class="btn btn-primary btn-block" id="submit">Login</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
